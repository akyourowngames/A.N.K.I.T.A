{
  "notepad.open": {
    "steps": [
      { "tool": "notepad.open" }
    ]
  },
  "notepad.write_note": {
    "steps": [
      { "tool": "notepad.write_file", "args_from": "content" },
      { "tool": "notepad.open_file" }
    ]
  },
  "notepad.continue_note": {
    "steps": [
      { "tool": "notepad.write_file", "args_from": "content", "args": { "mode": "append" } },
      { "tool": "notepad.open_file" }
    ]
  },
  "youtube.open": {
    "steps": [
      { "tool": "youtube.open" }
    ]
  },
  "youtube.play": {
    "steps": [
      { "tool": "youtube.open" },
      { "tool": "youtube.play", "args_from": "query" }
    ]
  }
  ,
  "system.window_switch": {
    "steps": [
      { "tool": "system.window_switch", "args_from": "query" }
    ]
  },
  "system.app.open": {
    "steps": [
      { "tool": "system.app.open", "args_from": "app", "args": { "action": "open" } }
    ]
  },
  "system.app.close": {
    "steps": [
      { "tool": "system.app.close", "args_from": "app", "args": { "action": "close" } }
    ]
  },
  "system.app.force_close": {
    "steps": [
      { "tool": "system.app.force_close", "args_from": "app", "args": { "action": "close", "force": true } }
    ]
  },
  "system.app.close_active": {
    "steps": [
      { "tool": "system.app.close_active", "args": { "action": "close_active" } }
    ]
  },
  "system.app.focus": {
    "steps": [
      { "tool": "system.app.focus", "args_from": "app", "args": { "action": "focus" } }
    ]
  }
}
